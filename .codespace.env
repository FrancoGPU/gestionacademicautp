# Configuración automática para GitHub Codespaces
# Este archivo contiene las configuraciones para la inicialización automática

# Configuración de tiempos de espera
DOCKER_STARTUP_WAIT=15
BACKEND_STARTUP_WAIT=20
DATABASE_INIT_WAIT=10

# Configuración de puertos
FRONTEND_PORT=3000
BACKEND_PORT=8080
MYSQL_PORT=3306
POSTGRES_PORT=5432
MONGO_PORT=27017
REDIS_PORT=6379

# Configuración de bases de datos
POSTGRES_DB=utp_gestion_academica_db_pg
POSTGRES_USER=franco
POSTGRES_PASSWORD=123456

MYSQL_DB=utp_gestion_academica_db_mysql
MYSQL_USER=root
MYSQL_PASSWORD=root

MONGO_DB=utp_gestion_academica_db_mongo

# Configuración de logging
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# Configuración de inicialización automática
AUTO_INIT_DATABASES=true
AUTO_START_FRONTEND=true
AUTO_START_BACKEND=true

# URLs de verificación
HEALTH_CHECK_URLS=(
    "http://localhost:8080/api/estudiantes"
    "http://localhost:8080/api/cursos"
    "http://localhost:8080/api/proyectos"
)
