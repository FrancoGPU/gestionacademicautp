{
  "name": "Spring Boot Multi-DB",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "chmod +x ./run.sh ./init-database.sh ./scripts/deployment/* ./scripts/database/* && ./scripts/deployment/codespace-init.sh",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "vscjava.vscode-spring-boot-extension-pack",
        "pivotal.vscode-spring-boot",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [3000, 8080, 3306, 5432, 27017, 6379],
  "portsAttributes": {
    "3000": {
      "label": "React Frontend"
    },
    "8080": {
      "label": "Spring Boot API"
    },
    "3306": {
      "label": "MySQL Database"
    },
    "5432": {
      "label": "PostgreSQL Database"
    },
    "27017": {
      "label": "MongoDB Database"
    },
    "6379": {
      "label": "Redis Cache"
    }
  }
}
